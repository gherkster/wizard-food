{
	"name": "base64-image",
	"description": "Please enter a description for your extension",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"build-remote": "directus-extension build && pnpm run push-remote",
		"push-remote": "scp dist/index.js oracle:~/docker-cloud/directus/extensions/base64-image/dist/index.js",
		"link": "directus-extension link",
		"validate": "directus-extension validate"
	},
	"devDependencies": {
		"@directus/api": "^25.0.1",
		"@directus/extensions-sdk": "13.0.3",
		"@types/node": "^22.13.10",
		"typescript": "^5.8.2"
	}
}